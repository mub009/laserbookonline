<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MoreFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_splash"
        ></ImageView>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:background="@color/laser_pink"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/group_gray_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/image_number"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/contactnumber"
                android:clickable="true"
                android:gravity="center"
                android:onClick="callNumPhone"
                android:focusable="true" />

            <LinearLayout
                android:id="@+id/group_social"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_facebook"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/socialfacebook"
                    android:clickable="true"
                    android:onClick="FaceBook" />


                <ImageView
                    android:id="@+id/image_snapchat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/socialsnapchat"
                    android:clickable="true"
                    android:onClick="Snapchat" />

                <ImageView
                    android:id="@+id/image_twitter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/socialtwitter"
                    android:clickable="true"
                    android:onClick="Twitter" />

                <ImageView
                    android:id="@+id/image_instegram"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/socialinstagram"
                    android:clickable="true"
                    android:onClick="Instagram" />


                <ImageView
                    android:id="@+id/image_whatsapp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/whatsapp"
                    android:clickable="true"
                    android:onClick="Whatsapp" />

            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/register_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:text="www.laserbookingonline.com"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>